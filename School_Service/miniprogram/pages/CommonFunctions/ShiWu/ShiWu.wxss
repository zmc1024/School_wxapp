/* miniprogram/pages/CommonFunctions/ShiWu/ShiWu.wxss */
.content{
  height: 100%;
  z-index: 99;
  background-color: #FEFEFE;
}
.add{
  position: fixed;
  bottom: 120rpx;
  right: 60rpx;
  z-index: 99;
}
.van-tabs__line {
  background-color: #fff !important;
  width: 20% !important;
}
.van-tab--active {
  font-weight: bold !important;
}
.van-ellipsis{
  color: #fff;
}
.van-tabs__nav{
  background-color: #00B26A !important;
}

.fixed-tabs{
  position: fixed;
  width: 100%;
  z-index: 99;
}
.data{
  position: relative;
  margin-top: 80rpx;
}
.data-item{
  border-bottom:4rpx solid #E5E5E5;
}
.student-msg{
  display: flex;
  align-items: center;
}
.userinfo-avatar{
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.userinfo-avatar:after {
  border: none;
}
.userinfo-nickname{
  display: block;
  font-size: 34rpx;
  color: black;
}
.publish-time{
  display: block;
  color: #90A4AE;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.data-desc{
  width: 95%;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.data-desc::after{
  content: '';
  clear: both;
  display: table;
}
.title, .position{
  margin-bottom: 10rpx;
  font-size: 30rpx;
}
.desc{
  display: inline-block;
  width: 70%;
  margin-left: 10rpx;
}
.goods-desc{
  color: #666;
  font-size: 28rpx;
  letter-spacing: 1rpx;
}
.goods-img{
  width: 170rpx;
  /* height: 200rpx; */
  border-radius: 15rpx;
  background-size: cover;
  float: right;
}
