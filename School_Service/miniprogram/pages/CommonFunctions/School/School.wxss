/* miniprogram/pages/CommonFunctions/School/School.wxss */
.wrapper {
  background: #f8f8f8;
}
.van-tabs__line {
  background-color: #00B26A !important;
}
.van-tab--active {
  font-weight: bold !important;
}
.content {
  width: 100%;
  margin: 16rpx auto;
  font-size: 28rpx;
}
.item-img, .item-title, .item-detail {
  width: 94%;
  margin: 0 auto;
}
.line{
  height: 4rpx;
  margin: 20rpx 0 30rpx 0;
  background-color: #00B26A
}
.newsList {
  margin-bottom: 10rpx;
}
.image {
  width: 100%;
  height: 630rpx;
  box-shadow: 10rpx 10rpx 10rpx rgba(0,0,0,0.5);
  border-radius: 30rpx;
}
.item-detail {
  text-indent: 2rem;
  text-align: justify;
}
.item-title {
  font-weight: bold;
  text-align: center;
}