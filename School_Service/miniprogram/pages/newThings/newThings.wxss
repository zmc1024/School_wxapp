/* miniprogram/pages/newThings/newThings.wxss */
.content{
  height: 100%;
  background-color: #FEFEFE;
}
.add{
  position: fixed;
  bottom: 120rpx;
  right: 60rpx;
  z-index: 99;
}
.menu{
  position: fixed;
  width: 100%;
  z-index: 99;
}
.data{
  position: relative;
  margin-top: 106rpx;
}
.data-item{
  width: 95%;
  margin: 0 auto;
  border: 4rpx solid #1296DB;
  border-radius: 20rpx;
  margin-bottom: 12rpx;
}
.student-msg{
  display: flex;
  align-items: center;
  position: relative;
}
.userinfo-avatar{
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.userinfo-avatar:after {
  border: none;
}
.userinfo-nickname{
  display: block;
  font-size: 34rpx;
  color: black;
}
.publish-time{
  display: block;
  color: #90A4AE;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.delete{
  font-size: 40rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
.data-desc{
  width: 95%;
  margin: 0 auto;
  margin-bottom: 12rpx;
}
.data-desc::after{
  content: '';
  clear: both;
  display: table;
}
.desc{
  display: inline-block;
  width: 70%;
  margin-left: 10rpx;
}
.title{
  color: #1296DB;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}
.goods-desc{
  color: #666;
  font-size: 28rpx;
  letter-spacing: 1rpx;
}
.goods-img{
  width: 170rpx;
  /* height: 200rpx; */
  border-radius: 15rpx;
  background-size: cover;
  float: right;
  margin-top: 10rpx;
}